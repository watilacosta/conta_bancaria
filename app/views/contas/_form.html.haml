-# frozen_string_literal: true
= simple_form_for(@conta) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    -# = f.association :cliente
    = f.input :saldo, input_html: {readonly: true}
    = f.input :agencia, readonly: true
    = f.input :numero, readonly: true
    = f.input :status, label: false, collection: Conta.status.keys, prompt: 'Mudar status', input_html: {id: 'status'}

  .form-actions
    = f.button :submit, 'Atualizar'